.gcounter {
  margin-top: 3px;
  display: flex;
}

.minus {
  width: 18px;
  height: 18px;
  color: #fb7618;
  border: 1px solid #fb7618;
  border-radius: 50%;
  position: relative;
}

.minus span {
  background-color: #fb7618;
  position: absolute;
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  width: 7px;
  height: 2px;
  border-radius: 3px;
}

.minus:after {
  content: "";
  position: absolute;
  top: -10px;
  left: -10px;
  right: -10px;
  bottom: -10px;
}

.gcounter	.b {
  min-width: 30px;
  text-align: center;
  font-size: 14px;
  font-weight: 600;
  color: #fb7618;
  line-height: normal;
}

.gcounter	input {
  border: none;
  text-align: center;
  color: black;
  font-size: 14px;
  font-weight: 600;
  min-width: 30px;
  outline: none;
  background-color: #fff;
}

.gcounter	.add {
  width: 18px;
  height: 18px;
  background: -moz-linear-gradient(left center, #ff9e1b 0%, #fb7618 100%);
  background: -webkit-gradient(linear, left center, right center, color-stop(0%, #ff9e1b), color-stop(100%, #fb7618));
  background: -webkit-linear-gradient(left center, #ff9e1b 0%, #fb7618 100%);
  background: -o-linear-gradient(left center, #ff9e1b 0%, #fb7618 100%);
  background: -ms-linear-gradient(left center, #ff9e1b 0%, #fb7618 100%);
  background: linear-gradient(to right center, #ff9e1b 0%, #fb7618 100%);
  border-radius: 50%;
  position: relative;
}

.gcounter	.add span {
  background: rgba(250, 250, 250, 1);
  position: absolute;
  -webkit-transform: translate(-50%, -50%);
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  border-radius: 3px;
}

.row {
  width: 7px;
  height: 2px;
}

.column {
  width: 2px;
  height: 7px;
}

.add:after {
  content: "";
  position: absolute;
  top: -10px;
  left: -10px;
  right: -10px;
  bottom: -10px;
}

.active {
  color: #ccc;
  border: 1px solid #ccc;
}

.active	span {
  background-color: #ccc;
}

.activeAdd {
  background: #ccc;
}

.activeAdd	span {
  background-color: #fff;
}
